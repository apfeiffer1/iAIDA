
all: lib examples 

lib:
	cd src ; make 

examples:
	cd examples ; make

clean:
	cd src ; make clean
	cd examples ; make clean
	cd tests ; make clean

install: all
	cd src ; make install
	cd include ; make install
	@mkdir -p @PREFIX_DIR@/bin
	cp aida-config.in @PREFIX_DIR@/bin/aida-config
	@if [ -d lib ] ; then \
          cd lib ; tar cf - * | ( cd @PREFIX_DIR@/lib/ ; tar xf - ) \
	fi


tests: lib examples testLog
	rm testLog

testLog:
	@cd tests ; make
	@./tests/runTests.py > ./tests/testLog
	@cp ./tests/testLog .
	@echo ""
	@cat testLog
	@echo ""

distclean: clean

